# HTTP
PORT=8010
APP_ENV=dev

# Security
JWT_SECRET=change_me_in_prod
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRES_MINUTES=15
REFRESH_TOKEN_EXPIRES_DAYS=30
REFRESH_COOKIE_NAME=refresh_token
BCRYPT_ROUNDS=12

# Cookies
COOKIE_SECURE=false
COOKIE_SAMESITE=lax
COOKIE_DOMAIN=

# CORS
# Comma-separated, e.g.: http://localhost:3000,http://127.0.0.1:3000
CORS_ORIGINS=*

# Database (Option A: full URL)
# DATABASE_URL=postgresql://oob:SECRET@localhost:5432/oob01

# Database (Option B: components)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=oob01
DB_USER=oob
DB_PASSWORD=SECRET

# DB schema init on app start
APPLY_SCHEMA_ON_START=true

# OAuth (placeholders for future)
OAUTH_GOOGLE_CLIENT_ID=
OAUTH_GOOGLE_CLIENT_SECRET=
OAUTH_GOOGLE_REDIRECT_URI=http://localhost:8010/oauth/google/callback
