# App
APP_ENV=prod
PORT=8010

# Security / tokens
JWT_SECRET=change_me_long_random_string
ACCESS_TOKEN_EXPIRES_MIN=60
REFRESH_TOKEN_EXPIRES_DAYS=30

# Cookies
COOKIE_SECURE=true
COOKIE_SAMESITE=lax
COOKIE_DOMAIN=
REFRESH_COOKIE_NAME=refresh_token

# UI guard (optional tuning)
UI_PUBLIC_PATHS=/login,/register,/health,/static,/docs,/openapi.json,/redoc,/favicon.ico
UI_PROTECTED_PREFIXES=/dashboard,/products
UI_SKIP_PREFIXES=/api,/auth
UI_ROOT_REDIRECT=true

# DB bootstrap on start (reads install/schema.sql inside container)
APPLY_SCHEMA_ON_START=true

# OAuth (optional; leave empty if unused)
OAUTH_TWITTER_AUTH_URL=
OAUTH_TWITTER_TOKEN_URL=
OAUTH_TWITTER_USERINFO_URL=
OAUTH_TWITTER_CLIENT_ID=
OAUTH_TWITTER_CLIENT_SECRET=
OAUTH_TWITTER_REDIRECT_URI=
OAUTH_TWITTER_SCOPES=
OAUTH_TWITTER_ALLOW_PSEUDO_EMAIL=false
OAUTH_PSEUDO_EMAIL_DOMAIN=example.local
